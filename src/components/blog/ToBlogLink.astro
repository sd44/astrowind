---
import { Icon } from 'astro-icon/components';
import { getBlogPermalink } from '~/utils/permalinks';
import { I18N } from 'astrowind:config';
import Button from '~/components/ui/Button.astro';

const { textDirection } = I18N;
---

<div class="mx-auto px-6 sm:px-6 pt-8 md:pt-4 pb-12 md:pb-20 max-w-3xl">
  <Button variant="tertiary" class="px-3 md:px-3" href={getBlogPermalink()}>
    {
      textDirection === 'rtl' ? (
        <Icon name="tabler:chevron-right" class="mr-1 rtl:-mr-1.5 -ml-1.5 rtl:ml-1 w-5 h-5" />
      ) : (
        <Icon name="tabler:chevron-left" class="mr-1 rtl:-mr-1.5 -ml-1.5 rtl:ml-1 w-5 h-5" />
      )
    } 返回 Blog 日志
  </Button>
</div>
