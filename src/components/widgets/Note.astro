---
import { Icon } from 'astro-icon/components';

export interface Props {
  icon?: string;
  title?: string;
  description?: string;
}

const {
  icon = 'tabler:info-square',
  title = await Astro.slots.render('title'),
  description = await Astro.slots.render('description'),
} = Astro.props;
---

<section class="not-prose bg-blue-50 dark:bg-slate-800">
  <div class="text-md mx-auto max-w-6xl px-4 py-4 text-center font-medium sm:px-6">
    <Icon name={icon} class="inline-block h-5 w-5 align-text-bottom font-bold" />
    <span class="font-bold" set:html={title} />
    <Fragment set:html={description} />
  </div>
</section>
