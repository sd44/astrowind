---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';

import Comment from '~/components/Twikoo.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import TagsList from '~/components/widgets/TagsList.astro';


import GalleryList from '~/components/GalleryList.astro';
const metadata = {
  title: 'Mobile App Homepage',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="欢迎来到"
    image={{
      src: 'https://images.unsplash.com/photo-1535303311164-664fc9ec6532?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: '本站 Hero 图片',
    }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">子韩的网络日志</span>
      <br />
      <!-- <span class="p-0 text-orange-500 text-3xl tracking-wide"> 我的日常、学习和生活片段 </span> -->
      <span class="hidden xl:block pt-6 text-3xl tracking-wide">朋友们，快快留言吧</span>
    </Fragment>

    <Fragment slot="subtitle" class="space-y-16 text-2xl tracking-wider">
      <div class="text-gracking-wider text-2xl text-pretty tracking-wider">
        小小梦想在心中 &ensp; 像颗种子悄悄种 <br />
        阳光雨露来呵护 &ensp; 风雨雷电亦不怵<br />

        相信自己有力量 &ensp; 不怕困难和挑战<br />
        心怀希望永前行 &ensp; 梦想花儿定开放
      </div>
    </Fragment>

    <Fragment slot="content" class="mt-24 tracking-wide">
      <TagsList />
      </Fragment>
  </Hero2>


  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts title="最新日志" information={`特别期望小伙伴们能够多多留言呢！`} />

  <GalleryList title="图片墙" information={'我的美术作品和相片簿'} />
  <!-- 引入评论组件 -->
  <Comment />
</Layout>
